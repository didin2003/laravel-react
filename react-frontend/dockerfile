FROM node:20-alpine AS builder

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Fix Vite permission issue (Alpine bug)
RUN chmod -R 755 /app/node_modules/.bin

# Copy all files
COPY . .

EXPOSE 5000

# Build the React app
RUN npm run build
